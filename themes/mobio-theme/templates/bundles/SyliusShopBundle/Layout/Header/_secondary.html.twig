<script>
    // Get all the secondary menu links
const secondaryMenuLinks = document.querySelectorAll('.secondary-menu-link');
const iphonescreensMenu = document.getElementById('mega-menu-iphonescreens-dropdown');

// Function to show mega menu
function showMegaMenu(menu) {
    menu.classList.remove('hidden');
}

// Function to hide mega menu
function hideMegaMenu(menu) {
    menu.classList.add('hidden');
}

// Loop through each link and add a mouseenter event listener
secondaryMenuLinks.forEach(link => {
    link.addEventListener('mouseenter', function() {
        // Add the 'active' class on mouse enter
        this.classList.add('active');
        
        // Show the corresponding mega menu
        if (this.id === 'iphonescreens') {
            showMegaMenu(iphonescreensMenu);
        }
    });

    // Add a mouseleave event listener to hide the mega menu when mouse leaves the navigation area
    link.addEventListener('mouseleave', function() {
        // Remove the 'active' class on mouse leave
        this.classList.remove('active');
        
        // Hide the mega menu
        hideMegaMenu(iphonescreensMenu);
    });
});

</script>

