{% if locales|length > 1 %}
    <div class="dropdown" id="sylius-locale-selector" {{ sylius_test_html_attribute('locale-selector') }}>
        <button class="btn btn-sm btn-outline-light border-gray-300 text-gray-700 rounded dropdown-toggle me-2 sylius-active-locale" data-bs-toggle="dropdown" {{ sylius_test_html_attribute('active-locale') }}>
            {{ active|sylius_locale_name }}
        </button>
        <div class="dropdown-menu">
            {% for code in locales %}
                {% if code is not same as(active) %}
                    <a class="dropdown-item sylius-available-locale" href="{{ path('sylius_shop_switch_locale', {'code': code}) }}" {{ sylius_test_html_attribute('available-locale') }}>
                        {{ code|sylius_locale_name }}
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endif %}
