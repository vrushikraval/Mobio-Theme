{% import '@SyliusShop/Common/Macro/breadcrumbs.html.twig' as breadcrumbs %}
{% import '@SyliusShop/Common/Macro/headers.html.twig' as headers %}

{% extends '@SyliusShop/layout.html.twig' %}
{% set product = (resources|first).reviewSubject|default(false) %}

{% block content %}

    {% if product %}
        {% include '@SyliusShop/Product/Show/_breadcrumb.html.twig' with {crumbs: [{label: 'sylius.ui.reviews'|trans}]} %}
    {% endif %}

    {{ headers.default('sylius.ui.reviews'|trans) }}

    <div class="grid gap-4 my-4">
        <div class="g-col-12 g-col-md-4">
            {{ sylius_template_event('sylius.shop.product_review.index.product_box', _context) }}
        </div>
        <div class="g-col-12 g-col-md-8">
            <div id="sylius-product-reviews" {{ sylius_test_html_attribute('product-reviews') }}>
                {{ sylius_template_event('sylius.shop.product_review.index.list', _context) }}
            </div>
        </div>
    </div>
{% endblock %}
